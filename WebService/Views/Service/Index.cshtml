@using WebService.Models;
@section Scripts
{
    <script src="@Url.Content("~/Scripts/ModalConfirmation.js")"></script>

}

@model List<Service>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of Services</h2>

<div id="myModal" class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
    <div class="modal-dialog modal-sm" role="document">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Delete Confirmation</h4>
            </div>
            <div class="modal-body" align="right">
                <a class="btn btn-default" data-dismiss="modal">Cancel</a>
                <a class="btn btn-primary" id="dataConfirmOK">OK</a>
            </div>
            @*<div class="modal-footer">
               
            </div>*@
        </div> 
    </div>
</div>

<table class="table table-bordered table-hover">
    <thead>                    
        <tr>
            <th>Service</th>
            <th>Type</th>
            <th>Phone Number</th>
            <th>Contact Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Service service in Model)
            {
            <tr>
                <td>@service.ServiceName</td>
                <td>@service.ServiceType</td>
                <td>@service.Person.PhoneNumber</td>
                <td>@service.Person.PersonName</td>
                <td><a href="@Url.Action("Edit", "Service", new { Id = service.Id }, null)">Edit</a><span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span><a href="@Url.Action("Delete","Service", new { Id = service.Id }, null)" data-confirm="Are you sure you want to delete?">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Edit","Service", new {Id = 0})">Create</a>

